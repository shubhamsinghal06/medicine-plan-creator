{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open with Chrome",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Open with Firefox",
            "file": "${workspaceFolder}/index.html",
            "reAttach": true
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Open with Edge",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "name": "Launch with Live Server",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:5500/index.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start Live Server"
        }
    ]
}

